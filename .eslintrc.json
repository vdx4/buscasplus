{
  "extends": ["next/core-web-vitals"],
  "plugins": ["prettier"],
  "rules": {
    "react-hooks/exhaustive-deps": "off",
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2,
        "useTabs": false,
        "trailingComma": "all",
        "printWidth": 80
      }
    ]
  }
}
